# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://127.0.0.1:27017/store_app
MONGO_DB=store_app

# JWT Authentication
JWT_SECRET=change_me_secret_in_production

# VietQR Payment Configuration
# Bank Information (defaults if client doesn't specify)
VIETQR_BANK_BIN=970422
VIETQR_ACC_NUMBER=0393759985
VIETQR_ACC_NAME=Tran Thi Kim Thanh CEO BigTech VN

# VietQR.io QuickLink Settings
VIETQR_USE_VIETQR_IO=true
VIETQR_TEMPLATE=compact2

# Webhook Configuration
# Get this from Casso/PayOS dashboard -> Payment Channel -> API Key
QR_WEBHOOK_SECRET=your-api-key-here

# Mock Mode (for development/testing without real bank transactions)
# Set to false when using real Casso/PayOS webhook
MOCK_QR_WEBHOOK=false

# Debug Mode
# Set to false in production to reduce log verbosity
DEBUG=true

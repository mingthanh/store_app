{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter get packages",
			"type": "shell",
			"command": "flutter pub get",
			"isBackground": false,
			"problemMatcher": [
				"$dart-pub"
			],
			"group": "build"
		},
		{
			"label": "Flutter analyze",
			"type": "shell",
			"command": "flutter analyze",
			"isBackground": false,
			"problemMatcher": [
				"$dart-analyze"
			],
			"group": "build"
		},
		{
			"label": "Flutter run (web)",
			"type": "shell",
			"command": "flutter run -d chrome --dart-define=FLUTTER_WEB_USE_SKIA=true",
			"isBackground": true,
			"group": "build"
		}
	]
}